        <item name="text_bg">#333331</item>
        <item name="text_color_main">#fff</item>
        <item name="text_color_english">#999</item>
        <item name="text_color_faded">#666</item>
        <item name="text_chapter_header_color">#999</item>
        <item name="text_chapter_header_border">#666</item>
        <item name="text_verse_selected_bg">#444</item>
        <item name="text_verse_num_color">#ddd</item>
