<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/enVerseNum"
            android:textColor="?text_verse_num_color"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mono"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/text_activtiy_numbering_padding"
            android:gravity="center"
            android:textSize="15sp"
            android:text="26"/>
        <TextView
            android:id="@+id/mono"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/text_activtiy_between_segment_padding"
            android:paddingBottom="@dimen/text_activtiy_between_segment_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/enVerseNum"
            android:layout_alignRight="@+id/heVerseNum"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="?text_color_main"
            android:text="Now the earth was unformed and void, and darkness was upon the face of the deep; and the spirit of God hovered over the face of the waters."/>
        <TextView
            android:id="@+id/heVerseNum"
            android:textColor="?text_verse_num_color"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mono"
            android:paddingTop="@dimen/text_activtiy_numbering_padding"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:text="26"/>
    </RelativeLayout>


    <org.sefaria.sefaria.TextElements.TextChapterHeader
        android:id="@+id/chapHeader"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </org.sefaria.sefaria.TextElements.TextChapterHeader>

</LinearLayout>