<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/text_background_light"
    tools:context="org.sefaria.sefaria.activities.TextActivity">

    <LinearLayout
        android:id="@+id/actionbarRoot"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="40dp"></LinearLayout>

    <!--funny story actually...I was on a reallly long flight from Israel and wanted to align the top of s/t to the bottom
    of s/t else...this is what I came up with -->
    <View
        android:id="@+id/useless"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/actionbarRoot"></View>
    <LinearLayout
        android:id="@+id/textMenuRoot"
        android:orientation="horizontal"
        android:layout_alignTop="@id/useless"
        android:layout_width="match_parent"
        android:translationZ="20dp"
        android:background="@color/menu_background"
        android:layout_height="wrap_content"></LinearLayout>
    <org.sefaria.sefaria.layouts.ListViewExt
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignTop="@id/useless"/><!--android:layout_above="@+id/linkRoot"-->
    <org.sefaria.sefaria.layouts.LinkDraggerView
        android:id="@+id/link_dragger"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:background="@drawable/link_dragger_background"
        android:layout_above="@+id/linkRoot"
        custom:maxHeightView="@+id/useless"
        custom:dragView="@+id/linkRoot">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:src="@drawable/dots"/>

    </org.sefaria.sefaria.layouts.LinkDraggerView>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/linkRoot"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/text_background_light"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
