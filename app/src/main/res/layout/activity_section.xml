<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?text_bg"
    tools:context="org.sefaria.sefaria.activities.TextActivity">

    <LinearLayout
        android:id="@+id/actionbarRoot"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="40dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/textMenuRoot"
        android:orientation="horizontal"
        android:layout_below="@+id/actionbarRoot"
        android:layout_width="match_parent"
        android:translationZ="20dp"
        android:background="@color/menu_background"
        android:layout_height="wrap_content"></LinearLayout>
    <org.sefaria.sefaria.layouts.ListViewExt
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/actionbarRoot"/><!--android:layout_above="@+id/linkRoot"-->
    <!--<org.sefaria.sefaria.layouts.LinkDraggerView
        android:id="@+id/link_dragger"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"

        android:layout_above="@+id/linkRoot"
        custom:maxHeightView="@+id/useless"
        custom:dragView="@+id/linkRoot">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:background="@drawable/link_dragger_background"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:alpha="0.5"
                android:src="@drawable/dots"/>
        </RelativeLayout>


    </org.sefaria.sefaria.layouts.LinkDraggerView>-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/linkRoot"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="?link_bg"
        android:layout_alignParentBottom="true"/>


    <!--FLOATING ICONS-->
    <FrameLayout
        android:id="@+id/jump_section_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:clickable="true"
        android:onClick="jumpSection">

        <ImageView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/double_down"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="?selectableItemBackgroundBorderless"
            android:alpha="0.5"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/jump_section_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/actionbarRoot"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:clickable="true"
        android:onClick="jumpSection">

        <ImageView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/double_up"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="?selectableItemBackgroundBorderless"
            android:alpha="0.5"
            />
    </FrameLayout>


</RelativeLayout>
