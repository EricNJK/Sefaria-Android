<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--cat_padding is meant to add extra padding only for cats -->
    <View
        android:id="@+id/cat_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/link_main_padding"
        android:visibility="gone"/>
    <View
        android:visibility="gone"
        android:id="@+id/color_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_bar_height"
        android:background="@color/halkhah"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="yoyo"
        android:padding="12dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:background="@drawable/button_ripple_rect_white"
        android:layout_margin="3dp"/>
</LinearLayout>