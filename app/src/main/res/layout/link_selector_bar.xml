<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/link_selection_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/link_background"
    android:orientation="horizontal">
    <HorizontalScrollView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/link_back_btn"
        android:scrollbarSize="2dp"
        >
        <LinearLayout
            android:id="@+id/link_selection_bar_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

    </HorizontalScrollView>
    <View
        android:id="@+id/link_back_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/tanach"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>
</merge>