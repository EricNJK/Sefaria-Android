<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/text_activity_main_margin"
    android:paddingLeft="@dimen/text_activity_main_margin">

    <org.sefaria.sefaria.layouts.SefariaTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:textColor="?text_color_english"
        android:text="Genesis 10:5"/>
    <org.sefaria.sefaria.layouts.SefariaTextView
        android:id="@+id/mono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:textSize="17sp"
        android:textColor="?text_color_main"
        android:text="And there was Noah!!"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?custom_actionbar_border"/>

</LinearLayout>